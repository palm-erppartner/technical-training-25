<?xml version="1.0"?>
<odoo>
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property">
                <header>
                  <button name="action_mark_sold"
          type="object"
          string="Sold"
          class="oe_highlight"/>

                  <button name="action_cancel_property"
          type="object"
          string="Cancel"
          class="btn-secondary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1 class="mb32">
                            <field name="name" class="mb16"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </div>
                    <group>
                        <group>
                            <field name="state"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                        
                        <notebook>
                            <page string="Description">
                                <group>
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation"/>
                                        <field name="total_area" readonly="1"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Offers">
                                <field name="offer_ids">
                                    <list string="Offers" editable="bottom">
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <button name="action_accept_offer"
        type="object"
        icon="fa-check"
        title="Accept"
        class="btn-primary"/>

<button name="action_refuse_offer"
        type="object"
        icon="fa-times"
        title="Refuse"
        class="btn-secondary"/>
                                        <field name="status"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                    </list>
                                <form string="Offer">
                                    <group>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="status"/>
                                    </group>
                                </form>
                                </field>
                            </page>

                            <page string="Other info">
                                <group>
                                    <group>
                                        <field name="salesperson_id"/>
                                        <field name="buyer_id"/>
                                    </group>
                                </group>
                            </page>

                        </notebook>

                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>